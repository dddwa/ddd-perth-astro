---
// Libraries
import { conferenceConfig } from '../config/conference-config'

// Data
import { menuData } from '../../lib/menu.ts'
import { socialsData } from '../../lib/socials.ts'

// Components
import Svg from './util/svg.astro'
import { button } from './molecules/button.astro'

// Panda CSS
import { css } from '../../styled-system/css'

// Assets
import LogoStandard2023 from '/public/svg/logo-standard-2023-white.svg';
---

<footer class={`global-footer ${css({ position: 'relative', bg: '2023-black', w: '100%', display: 'flex', zIndex: '10' })}`}>
    <div class={`container-wrapper ${css({ w: '100%', position: 'relative', maxW: '1200px', m: '0 auto' })}`}>
        <div class={`grid-wrapper ${css({ w: '100%', position: 'relative', display: 'flex', flexDir: 'column', justifyContent: 'flex-start', alignItems: 'flex-start' })}`}>
            <div class={`header-wrapper ${css({ w: '100%', position: 'relative', display: 'flex', flexDir: 'column', justifyContent: 'flex-start', alignItems: 'flex-start', p: '6', sm: { flexDir: 'row', justifyContent: 'space-between', alignItems: 'center' }, lg: { p: '8' } })}`}>
                <div class={`left-wrapper ${css({ w: 'auto', position: 'relative', display: 'flex', flexDir: 'column', justifyContent: 'flex-start', alignItems: 'flex-start', sm: { flexDir: 'row', justifyContent: 'center', alignItems: 'center' } })}`}>
                    <a
                        aria-label={`Visit the ${conferenceConfig.name} homepage`}
                        href={`/`}
                        class={css({ display: 'flex', justifyContent: 'flex-start', alignItems: 'center' })}
                    >
                        <Svg src={LogoStandard2023} class={css({ w: '24' })} />
                    </a>
                </div>
                <div class={`right-wrapper ${css({ w: 'auto', position: 'relative', display: 'flex', flexDir: 'column', justifyContent: 'flex-start', alignItems: 'flex-start', mt: '6', sm: { flexDir: 'row', justifyContent: 'center', alignItems: 'center', mt: '0' } })}`}>
                    <a
                        href={`mailto:info@dddperth.com`}
                        class={`${css({ color: 'white' })}`}
                    >
                        info@dddperth.com
                    </a>
                    <a
                        href={`/contact`}
                        class={`${button({ visual: 'tertiary', size: 'lg', width: 'auto' })} ${css({ mt: '4', sm: { mt: '0', ml: '6' }, lg: { ml: '8' } })}`}
                    >
                        Get in touch
                    </a>
                </div>
            </div>
            <div class={`links-wrapper ${css({ w: '100%', position: 'relative', display: 'grid', gridTemplateColumns: 'repeat(2,minmax(0,1fr))', pb: '6', sm: { gridTemplateColumns: 'repeat(3,minmax(0,1fr))' }, lg: { display: 'flex', flexDir: 'row', justifyContent: 'space-between', alignItems: 'center', px: '2', pt: '2', pb: '8' } })}`}>
                <div class={`link-wrapper ${css({ w: '100%', display: 'flex', flexDir: 'column', justifyContent: 'flex-start', alignItems: 'flex-start', lg: { w: 'auto' } })}`}>
                    <a
                        href={`/`}
                        class={`${button({ visual: 'hyperlink', size: 'sm', width: 'full' })} ${css({ lg: { w: 'auto', fontSize: 'lg' } })}`}
                    >
                        Home
                    </a>
                </div>
                {menuData.map((item) => (
                    <div class={`link-wrapper ${css({ w: '100%', display: 'flex', flexDir: 'column', justifyContent: 'flex-start', alignItems: 'flex-start', lg: { w: 'auto' } })}`}>
                        <a
                            href={item.link}
                            class={`${button({ visual: 'hyperlink', size: 'sm', width: 'full' })} ${css({ lg: { w: 'auto', fontSize: 'lg' } })}`}
                        >
                            {item.title}
                        </a>
                    </div>
                ))}
            </div>
            <div class={`socials-wrapper ${css({ w: '100%', position: 'relative', display: 'flex', flexDir: 'row', justifyContent: 'flex-start', alignItems: 'flex-start', flexWrap: 'wrap', borderTop: '1px solid white', px: '4', pt: '6', lg: { justifyContent: 'center', alignItems: 'center', gap: '4', px: '6', pt: '8' } })}`}>
                {socialsData.map((item) => (
                    <div class={`link-wrapper ${css({ w: 'auto', display: 'flex', flexDir: 'column', justifyContent: 'flex-start', alignItems: 'flex-start' })}`}>
                        <a
                            aria-label={`Visit us on ${item.title}`}
                            href={item.link}
                            target={`_blank`}
                            rel={`nofollow noopener`}
                            class={css({ display: 'flex', justifyContent: 'flex-start', alignItems: 'center' })}
                        >
                            <Svg src={item.icon} class={css({ w: '12', color: '2023-gray-light', transition: 'colors', _hover: { color: 'white' }, lg: { w: '14' } })} />
                        </a>
                    </div>
                ))}
            </div>
            <div class={`terms-wrapper ${css({ w: '100%', position: 'relative', display: 'flex', flexDir: 'column', justifyContent: 'flex-start', alignItems: 'flex-start', pt: '6', sm: { flexDir: 'row', alignItems: 'center' }, lg: { justifyContent: 'center', px: '2', pt: '8' } })}`}>
                <a
                    href={`/terms-and-conditions`}
                    class={`${button({ visual: 'hyperlink', size: 'sm', width: 'full' })} ${css({ lg: { w: 'auto', fontSize: 'lg' } })}`}
                >
                    Terms and Conditions
                </a>
                <a
                    href={`/privacy-statement`}
                    class={`${button({ visual: 'hyperlink', size: 'sm', width: 'full' })} ${css({ lg: { w: 'auto', fontSize: 'lg' } })}`}
                >
                    Privacy Statement
                </a>
            </div>
            <div class={`copyright-wrapper ${css({ w: '100%', position: 'relative', display: 'flex', flexDir: 'column', justifyContent: 'flex-start', alignItems: 'flex-start', p: '6', pb: '0', color: '2023-gray-light', fontSize: 'sm', sm: { flexDir: 'row', alignItems: 'center' }, lg: { justifyContent: 'center', p: '8', pb: '0' } })}`}>
                <p>Copyright Â© 2023 DDD WA Inc.</p>
                <p class={css({ pt: '2', sm: { pt: '0', pl: '6' }, lg: { pl: '8' } })}>ABN 19 622 848 276</p>
            </div>
            <div class={`back-to-top-wrapper ${css({ w: '100%', position: 'relative', display: 'flex', flexDir: 'column', justifyContent: 'flex-start', alignItems: 'flex-start', pt: '6', lg: { justifyContent: 'center', alignItems: 'center', py: '8' } })}`}>
                <a
                    href='#header'
                    class={`back-to-top-button ${css({ w: '100%', bg: '2023-gray', color: 'white', textAlign: 'center', px: '8', py: '4', transition: 'colors', lg: { w: 'auto', px: '16' },  _hover: { bg: '2023-red' } })}`}
                >
                    Back to top
                </a>
            </div>
        </div>
    </div>
</footer>
